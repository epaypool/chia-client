{
  "name": "@epaypool/chia-client",
  "version": "1.0.0",
  "description": "TypeScript client for Chia node peer RPC interface and WS",
  "main": "dist/",
  "scripts": {
    "build": "tsc",
    "watch": "jest --watch",
    "test": "jest --runInBand test/",
    "prepare": "rm -rf dist && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freddiecoleman/chia-client"
  },
  "keywords": [
    "chia",
    "cryptocurrency"
  ],
  "author": "Freddie Coleman",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/json-bigint": "^1.0.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^15.12.1",
    "@types/ws": "^7.4.4",
    "@types/yaml": "^1.9.7",
    "jest": "^27.0.4",
    "nock": "^13.1.0",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "chia-utils": "^1.0.3",
    "crypto": "^1.0.1",
    "json-bigint": "^1.0.0",
    "ws": "^7.4.5",
    "yaml": "2.0.0-5"
  },
  "jest": {
    "roots": [
      "<rootDir>/test",
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "restoreMocks": true,
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "isolatedModules": true
      }
    }
  }
}
